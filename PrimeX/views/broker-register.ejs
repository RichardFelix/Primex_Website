<!DOCTYPE html>
<html lang="en">
    
    <%- include('partials/head.ejs') %>
    
    <body id="blue-layout">
        
        <%- include('partials/nav.ejs') %>
        
        <!-- Page Header -->
        <div id="page-header" class="page-header-section section-light margin40-top">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="page-tile-block">
                            <h2 class="">Financial Advisor Login</h2>
                        </div>
                        <ol class="breadcrumb">
                            <li><a href="/">Home</a></li>
                            <li class="active">Financial Advisor Login</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page Header -->
        <!-- Section Begins -->
        <section id="about" class="about-section border-hidden">
            <div class="container">
                <!-- Content Begins -->  
                <div class="row">
                    <div class="text-center">
                    <!-- Block Begins -->
                    <form class="form-horizontal ws-validate" role="form" method='POST' action='/register'>
                        <div class="form-group">
                          <label class="control-label col-sm-2" for="email">Email:</label>
                          <div class="col-sm-6">
                            <input type="email" class="form-control" id="email" name='email' required placeholder="Enter email">
                          </div>
                        </div>
                        <div class="form-group">        
                          <div class="col-sm-offset-2 col-sm-6">
                            <button type="submit" class="btn btn-default active">Submit</button>
                            </div>
                        </div>
                      </form>
                    </div>
                   </div>
                    <!-- Block Ends -->
                </div>
            <!-- container -->
        </section>

        <%- include('partials/loginFooter.ejs') %>

        <script src="js/js-webshim/minified/polyfiller.js"></script>
        <script> 
            /* form validation code */
            (function () {
                webshim.setOptions('forms', {
                    lazyCustomMessages: true,
                    iVal: {
                        sel: '.ws-validate',
                        handleBubble: 'hide',

                        errorMessageClass: 'help-block',
                        successWrapperClass: 'has-success',
                        errorWrapperClass: 'has-error',
                        fieldWrapper: '.form-group'
                }
            });
            webshim.polyfill('forms');
        })();
        </script>
    </body>
</html>