<!DOCTYPE html>
<html lang="en">
    
    <%- include('partials/head.ejs') %>
    
    <body id="blue-layout">
        <%- include('partials/nav.ejs') %>
        
        <!-- Page Header -->
        <div id="page-header" class="page-header-section section-light margin40-top">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="page-tile-block">
                            <h2 class="">Financial Adivsor Login</h2>
                        </div>
                        <ol class="breadcrumb">
                            <li><a href="/">Home</a></li>
                            <li class="active">Financial Adivsor Login</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page Header -->
        <!-- Section Begins -->
        <section id="about" class="about-section border-hidden">
            <div class="container">
                <!-- Content Begins -->  
                <div class="row">
                    <!-- Block Begins -->
                    <div class="col-sm-12">
                         <div class="content-block text-justify">
                            <center>
                                 <h2 class=" text32 text300 no-margin">Request Access</h2>
                                 <div class='pad30-top'></div>
                            </center>
                        </div>     
                    </div>   
                </div>
            </div>
                <div class="row">
                    <div class="text-center">
                    <!-- Block Begins -->
                    <form class="form-horizontal ws-validate" role="form" method='POST' action='/request'>
                        <div class="form-group">
                          <label class="control-label col-sm-3" for="name">Name:</label>
                          <div class="col-sm-6">          
                            <input type="text" class="form-control" id="name" name='name' required placeholder="Enter Name">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="control-label col-sm-3" for="email">Email:</label>
                          <div class="col-sm-6">
                            <input type="email" class="form-control" id="email" name='email' required placeholder="Enter Email">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="control-label col-sm-3" for="id">Broker ID:</label>
                          <div class="col-sm-6">          
                            <input type="text" class="form-control" id="id" name='id' required placeholder="Enter a Broker ID">
                          </div>
                        </div>
                        <div class="form-group">        
                          <div class="col-sm-offset-2 col-sm-8">
                            <button type="submit" class="btn btn-default active ">Submit</button>
                            </div>
                        </div>
                      </form>
                    </div>
                   </div>
        </section>

        <%- include('partials/loginFooter.ejs') %>
    </body>
</html>