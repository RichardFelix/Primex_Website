<!DOCTYPE html>
<html lang="en">
    
    <%- include('partials/head.ejs') %>
    
    <body id="blue-layout">
        
        <%- include('partials/nav.ejs') %>
        
        <!-- Page Header -->
        <div id="page-header" class="page-header-section section-light margin40-top">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="page-tile-block">
                            <h2 class="">Financial Advisor Login</h2>
                        </div>
                        <ol class="breadcrumb">
                            <li><a href="/">Home</a></li>
                            <li class="active">Change Password</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page Header -->
        <!-- Section Begins -->
        <section id="about" class="about-section border-hidden">
            <div class="container">
                <!-- Content Begins -->  
                <!-- Content Begins -->  
                <div class="row">
                    <!-- Block Begins -->
                    <div class="col-sm-12">
                         <div class="content-block text-justify">
                            <center>
                                 <h2 class=" text32 text300 no-margin">Change Password</h2>
                                <div class="red-bold-text pad20-top pad10-bottom"><%= alert %></div>
                            </center>
                        </div>     
                    </div>   
                </div>
           
                    <div class="text-center">
                    <!-- Block Begins -->
                    <form class="form-horizontal ws-validate" role="form" method='POST' action='/changePassword'>
                        <div class="form-group">
                          <label class="control-label col-sm-2" for="email">Email:</label>
                          <div class="col-sm-6">
                            <input type="email" class="form-control" id="email" name='email' required placeholder="Enter a Password" value='<%= email %>'>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="control-label col-sm-2" for="pwd">Create a Password:</label>
                          <div class="col-sm-6">          
                            <input type="password" class="form-control" id="pwd" name='password' required placeholder="create a password">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="control-label col-sm-2" for="pwd">Access Code:</label>
                          <div class="col-sm-6">          
                            <input type="text" class="form-control" id="accessCode" name='accessCode' required placeholder="enter access code">
                          </div>
                        </div>
                        <div class="form-group">        
                          <div class="col-sm-offset-2 col-sm-6">
                            <button type="submit" class="btn btn-default active ">Submit</button>
                            </div>
                        </div>
                      </form>
                    </div>
            <!-- container -->
        </section>

        <%- include('partials/loginFooter.ejs') %>
    </body>
</html>